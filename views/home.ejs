<%- include ('_layouts/header') -%>

<!-- carousel -->
<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner container">
    <div class="carousel-item active">
      <img src="/images/deal2.JPG" class="d-block w-100" alt="..." height="500" width="150">
      <div class="carousel-caption d-none d-md-block">
        <a class="btn" href="/products/all" id="linearGrad"
          style="font-size:20px;padding: 14px 40px;text-align: center;width: 250px;">Want
          All Products</a>
        <!-- <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p> -->
      </div>
    </div>
    <div class="carousel-item">
      <img src="/images/deal1.PNG" class="d-block w-100" height="500" width="150">
      <div class="carousel-caption d-none d-md-block">
        <% if (user) { %>
        <a class="btn" href="/cart/checkout"
          style="background-color: #ff6699;font-size: 20px;padding: 14px 40px;text-align: center;width: 250px;border:2px solid #ff0055;border-radius: 15px;">Go
          to
          cart</a>
        <% } else {%>
        <a href="/users/login" class="btn btn-info"
          style="background-color: #ff6699;font-size: 20px;padding: 14px 40px;text-align: center;width: 250px;border:2px solid #ff0055; border-radius: 15px;">Log
          in
          to go to cart</a>
        <% } %>
      </div>
    </div>
    <div class="carousel-item">
      <img src="/images/deal3.jpg" class="d-block w-100" alt="..." height="500" width="150">
      <div class="carousel-caption d-none d-md-block">
        <!-- <a class="btn btn-info" href="/products/all" style="background-color: #4CAF50;font-size: 16px;padding: 14px 40px;text-align: center;width: 250px;">Get Products</a> -->

      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">

    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only" style="color: black;">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<!-- carousel end  -->


<div class="container">
  <div style="border: 7px #F4FCEF;border-style: solid;padding: 15px 15px;border-radius: 2%;">
    <center>
      <div>
        <span style="font-size: 60px;font-family: sans-serif;">
          Deals of the Day
        </span>
      </div>
    </center>

    <br><br>
    <!-- products list -->



    <div class="owl-carousel owl-theme">
      <% products.forEach(function(product){ %>
      <div class="item">

