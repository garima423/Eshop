          <img class="card-img-top" src="/product_images/<%= product._id %>_<%= product.image %>"
            alt="<%= product.name %>" width="200" height="200">
          <div class="card-body" style="align-items: center;">
            <h5 class="card-title" style="font-size: large;">
              <p class="card-text" style="font-size: medium;"> <i class="fa fa-rupee"></i> <%= product.price %> </p>
              <br>

              <a href="/products/details/<%= product._id %>" class="btn btn-outline-primary"
                style="font-size: 16px;text-align: center;">Get Details</a>

          </div>
        </div>


